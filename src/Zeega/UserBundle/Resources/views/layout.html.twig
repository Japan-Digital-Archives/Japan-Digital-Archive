{% set locale = app.request.locale  %}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
    	<meta name="robots" content="noindex,follow">
    	<meta name="description" content="">
    	<meta name="keywords" content="">
    	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    	<link href="{{ asset('js/lib/bootstrap-2.0.2/css/bootstrap.css')}}" rel="stylesheet" type="text/css">
    	<link href="{{ asset('js/lib/bootstrap-2.0.2/css/bootstrap-responsive.css')}}" rel="stylesheet">
    </head>

    <body>
    	<div class="login-modal-header">
        	<h2 style="padding-top:20px;padding-bottom:30px;">	
        		{% block header %}
        		{% endblock header %}
        	</h2>
        </div>
    	<div class="login-modal-body">
    		<div style="clear:both"></div>
    		{% block content %}
    		{% for key, message in app.session.getFlashes() %}
                <div class="{{ key }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}

            <div id="authorization-content">
                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>
    	   </div>
            {% endblock content %}
    </body>
</html>