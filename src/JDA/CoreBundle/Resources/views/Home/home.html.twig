	</div>
	
	<!-- searchbar -->
	<div id="jda-home-search-div">
	    <div id="search-bar">
	        <div class="visual_search pull-left"></div>
			<a href="#" id="jda-go-button" class="jda-home-button">{% trans %}jda.home.go{% endtrans %}</a>
